<div class="container">
  <h1>List Details :-)</h1>

   <% if @list.photo.attached? %>
      <%= cl_image_tag @list.photo.key, height: 500, width: 600, crop: :fill  %>
    <% end %>

  <h2><%= @list.name %></h2>

  <%# <%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
      width: 600, height: 500, crop: :fill) %>

  <%= link_to "Back to lists !", lists_path %> | <%= link_to "Add a list", new_list_path(@list) %>

<p><strong>Bookmarks</strong></p>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.comment %></li>
    <%= link_to "Delete",
      bookmark_path(bookmark),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  <% end %>
</ul>
<br>
<p><%= link_to "add a bookmark!", new_list_bookmark_path(@list) %></p>

<%# <li class="list-group-item">
  <%= @bookmark.comment %>
<%# </li> %>
</div>


<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1><strong>Lists</strong></strong>!</h1>
  </div>
</div>

<%@lists.each do |list| %>
  <div class="card-product">
    <% if list.photo.attached? %>
      <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill  %>
    <% end %>
    <div class="card-product-infos">
    <h2> <%=link_to list.name, list_path(list) %></h2>
    </div>
  </div>
<%end %>


<%= link_to "add a list!", new_list_path, class:"btn btn-gradient" %>
